<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ComboBox?>
<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.cvut.fel.pjv.sokolant.roughlikegame.controller.MainMenuController">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="720.0" prefWidth="1280.0" VBox.vgrow="ALWAYS">
      <children>
            <ImageView>
               <image>
                  <Image url="@../../../../../../images/bgs/main_menu.png" />
               </image>
            </ImageView>
            <Button fx:id="newGameButton"
                    onAction="#newGame"
                    layoutX="349.0"
                    layoutY="257.0"
                    prefHeight="50.0"
                    prefWidth="300.0"
                    text=" New Game"/>

            <ComboBox fx:id="savesComboBox"
                      layoutX="349.0"
                      layoutY="325.0"
                      prefWidth="300.0"/>

            <Button fx:id="loadGameButton"
                    onAction="#loadGame"
                    layoutX="349.0"
                    layoutY="349.0"
                    prefHeight="50.0"
                    prefWidth="300.0"
                    text="Load Game"/>

            <Button fx:id="loggerButton"
                    onAction="#toggleLogging"
                    layoutX="349.0"
                    layoutY="430.0"
                    prefHeight="50.0"
                    prefWidth="300.0"/>

            <Button fx:id="quitButton"
                    onAction="#quitGame"
                    layoutX="349.0"
                    layoutY="514.0"
                    prefHeight="50.0"
                    prefWidth="300.0"
                    text="Quit" />
      </children>
    </AnchorPane>
  </children>
</VBox>
